<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=department.title%></title>
    <link rel="icon" type="image/x-icon" href="/image/logo.png" />

    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/style.css" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="/css/vertislide.css" />
    <style>
      img.myimg {
        width: 17.875rem;
        height: 18.75rem;
      }
      .webgra {
        box-shadow: 0 0 1.875rem white;
        background-image: linear-gradient(
          to right,
          #3ab5b0 0%,
          #3d99be 31%,
          #56317a 100%
        );
      }
      body {
        font-family: Arial, Helvetica, sans-serif;
      }
      .backwebgra {
        background-image: linear-gradient(to right, #243949 0%, #517fa4 100%);
      }
      .card-body p {
        font-size: 1.25rem;
      }
      .flip-card {
        background-color: transparent;
        width: 18.75rem;
        height: 18.75rem;
        perspective: 62.5rem;
      }

      .flip-card-inner {
        position: relative;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        box-shadow: 0 0.25rem 0.5rem 0 rgba(0, 0, 0, 0.2);
      }

      .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
      }

      .flip-card-front,
      .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
      }

      .flip-card-front {
        background-color: #bbb;
        color: black;
      }

      .flip-card-back {
        background-color: #2980b9;
        color: white;
        transform: rotateY(180deg);
      }
      #footer-last h6 {
        font-size: 1.5rem;
      }
    </style>
  </head>
  <!-- You can access to department dictionary -->
  <body style="background-image: url(/image/<%=department.imagebg%>);background-size:cover;background-repeat:no-repeat;background-position: center center;">
  <%-include('asset/header')%>

  
  <div id="scene">
    <div class="container">
    <div class="row">
    <div class="col-md-12 col-sm-12">
    <div id="left-zone">
      <ul class="list">
        <%let array=["strawberry","banana","apple","orange"]%> 
        <%for(let i=0;i<1;i++){%> 
        <li class="item"> 
             <input type="radio" id="radio_<%=department.events[i].description%>" name="basic_carousel" value="<%=department.events[i].description%>"/> 
            <% if(i === 1) %> <input type="radio" id="radio_<%=department.events[i].description%>" name="basic_carousel" value="<%=department.events[i].description%>" checked="checked"/> <%;%>
             <label class="label_<%array[i]%>" for="radio_<%=department.events[i].description%>"><%=department.events[i].title%></label>
          <div class="content content_<%array[i]%>"><span class="picto"></span>
            <h1><%=department.events[i].title %> </h1>
            <p><%=department.events[i].description%></p>
          </div>
        </li>
        <%}%>
        <%for(let i=1;i<department.events.length;i++){%> 
        <li class="item"> 
             <input type="radio" id="radio_<%=department.events[i].description%>" name="basic_carousel" value="<%=department.events[i].description%>"/> 
            <% if(i === 1) %> <input type="radio" id="radio_<%=department.events[i].description%>" name="basic_carousel" value="<%=department.events[i].description%>" /> <%;%>
             <label class="label_<%array[i]%>" onclick="javascript:func()" for="radio_<%=department.events[i].description%>"><%=department.events[i].title%></label>
          <div class="content content_<%array[i]%>" id="<%=i%>" hidden><span class="picto"></span>
            <h1><%=department.events[i].title %> </h1>
            <p><%=department.events[i].description%></p>
          </div>
        </li>
        <%}%>
      </ul>
    </div>
  </div>

    <div id="middle-border"></div>
    <div class="col-md-12 col-sm-12">
    <div id="right-zone"></div>
  </div>
  </div>
</div>
</div>

    <%-include('asset/footer')%>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
      crossorigin="anonymous"
    ></script>
  <script>
  import { cards } from "/content/info.js";
  let arr = cards.cards;
  console.log(arr);
  function func(){
    for(let j=0;j<arr.length;j++){
    for(let i=1;i<arr.events[j].length;i++){
      let element=document.getElementById(i);
      element.hidden=none;
    }
    }
  }
  </script>
  </body>
</html>

<script>
  AOS.init();
</script>
